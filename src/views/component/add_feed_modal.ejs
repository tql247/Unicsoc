        <form action="" id="add-feed-form">
            <div class="d-flex-top">
                <div class="m-sm d-middle-x toolbar">
                    <div class="font-strong">
                        Nội dung
                    </div>
                    <div>
                        <div class="div-controll font-md font-weigh-md color-main mt-10 btn"
